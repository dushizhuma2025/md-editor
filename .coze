[project]
requires = ["nodejs-24"]

[dev]
build = ["pnpm", "install"]
run = ["pnpm", "--filter", "@md/web", "preview", "--port", "5000", "--host"]

[deploy]
build = ["pnpm", "install", "--ignore-scripts"]
run = ["sh", "-c", "cd apps/web && VITE_TEMP_DIR=/tmp/.vite-cache pnpm exec vite preview --port 5000 --host --strictPort"]
